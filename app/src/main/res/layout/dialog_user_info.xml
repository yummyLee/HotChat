<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_user_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="用户资料"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1.05">

        <com.yummy.hotchat.Widget.CircleImageView
            android:id="@+id/civ_dialog_user_info_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/header"
            app:border_color="#E0E0E0"
            app:border_width="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/civ_dialog_user_info_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称："
                android:textColor="@color/accent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_dialog_user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="傻巴度"
                android:textColor="@color/accent"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/civ_dialog_user_info_header"
            android:layout_alignStart="@+id/civ_dialog_user_info_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名："
                android:textColor="@color/accent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_dialog_user_info_illustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dafasgkjajgalksfjaskgnalkgnasljfksalfangal.txt"
                android:textColor="@color/accent"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/civ_dialog_user_info_header"
            android:layout_toEndOf="@+id/civ_dialog_user_info_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="性别："
                android:textColor="@color/accent"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_dialog_user_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男"
                android:textColor="@color/accent"
                android:textSize="16dp" />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>